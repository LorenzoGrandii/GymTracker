<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taskactivity.SettingsActivity"
    style="@style/Theme.GymTracker.task"
    android:background="@color/colorPrimary">
    <TextView android:id="@+id/tv_date_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_date"
        android:layout_marginTop="@dimen/margin_date_top"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white_low_opacity"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="@dimen/text_low_size"/>
    <LinearLayout android:id="@+id/header_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">
        <TextView android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_marginBottom="@dimen/title_margin"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:letterSpacing="-0.03"
            android:textFontWeight="1000"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/helvetica_bold"
            android:layout_marginEnd="@dimen/title_margin_right" />
    </LinearLayout>
    <RelativeLayout android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_settings"
        android:layout_marginTop="@dimen/margin_date">

        <LinearLayout android:id="@+id/ll_temperature_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_marginBottom="@dimen/title_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/switch_dark"
                android:layout_marginEnd="@dimen/title_margin"
                android:text="@string/temperature_switch"
                android:textColor="@color/colorAccent"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/temperature_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/switch_dark"
                android:enabled="true"
                android:theme="@style/SettingsSwitch"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_step_counter_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/ll_temperature_switch"
            android:layout_marginBottom="@dimen/title_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/switch_dark"
                android:layout_marginEnd="@dimen/title_margin"
                android:text="@string/step_counter_switch"
                android:textColor="@color/colorAccent" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/step_counter_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/switch_dark"
                android:enabled="true"
                android:theme="@style/SettingsSwitch"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_umidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_step_counter_switch">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/switch_dark"
                android:layout_marginEnd="@dimen/title_margin"
                android:text="@string/humidity_switch"
                android:textColor="@color/colorAccent" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/humidity_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/switch_dark"
                android:enabled="true"
                android:theme="@style/SettingsSwitch"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_b_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_settings_buttons"
            android:layout_below="@id/ll_umidity"
            android:gravity="center">
            <Button android:id="@+id/b_settings_reset"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginStart="@dimen/margin_date"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:backgroundTint="@color/color1"/>
            <Button android:id="@+id/b_settings_saver"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_date"
                android:backgroundTint="@color/white"
                android:text="@string/save"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_b_settings"
            android:layout_marginTop="@dimen/title_margin"
            android:gravity="center">
            <TextView android:id="@+id/change_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginTop="4dp"
                android:paddingBottom="2dp"
                android:text="@string/reset_account"
                android:textSize="@dimen/text_low_size"
                android:textColor="@color/white_low_opacity" />
            <TextView android:id="@+id/b_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingBottom="2dp"
                android:text="@string/exit"
                android:textColor="@color/color1"
                android:textSize="@dimen/text_low_size"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </RelativeLayout>
    <fragment android:id="@+id/copyright"
        android:name="com.grandi.lorenzo.gymtracker.globalClasses.FragmentCopyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>